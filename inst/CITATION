citHeader("To cite package 'NCStats' in publications use:")

desc <- packageDescription("NCStats")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)
citEntry(entry="Manual",
         title = "NCStats: Helper Functions for Statistics at Northland College",
         author = personList(as.person("Derek H. Ogle")),
         year = year,
         note = vers,
         textVersion = paste("Ogle, D.H. ",year,". NCStats: Helper Functions for Statistics at Northland College. ",vers,".", sep="")
)

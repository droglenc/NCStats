citHeader("To cite package 'NCStats' in publications use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)
citEntry(entry="Manual",
         title = "NCStats: Helper Functions for Statistics at Northland College",
         author = personList(as.person("Derek H. Ogle")),
         year = year,
         note = note,
         textVersion = paste0("Ogle, D.H. ",year,". NCStats: Helper Functions for Statistics at Northland College. ",note,".")
)
